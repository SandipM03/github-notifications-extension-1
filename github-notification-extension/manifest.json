{
  "manifest_version": 3,
  "name": "GitHub Notifications",
  "version": "1.0",
  "description": "Fetches and displays GitHub notifications directly in the browser.",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
